    <!-- levels list -->
    <section id="levels-list" class="">
      <div class="container">
        <h2 class="text-center text-uppercase mb-5 mt-3">Subjects and Levels</h2>

        <div class="row">
          <div class="col-12">
            <ul class="list-group mx-auto">
              <li class="list-group-item"><i class="fas fa-check-circle text-success"></i> "Collège"</li>
              <li class="list-group-item"><i class="fas fa-check-circle text-success"></i> "Lycée"</li>
