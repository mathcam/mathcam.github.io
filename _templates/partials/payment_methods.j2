<section>
  <div class="container">
    <h2 class="text-center text-uppercase mb-5">{{ "Modes de paiement" if lang == "fr" else "Payment methods" }}</h2>
    <div class="row justify-content-center">
      {% if not inter %}
        <figure class="figure col-4 col-sm-3 col-md-2">
          <img class="img-fluid figure-img d-block mx-auto" src="img/payment/twint.png" alt="Twint" width="160" height="160" loading="lazy">
          <figcaption class="figure-caption d-none d-md-block text-center">Twint</figcaption>
        </figure>
        <figure class="figure col-4 col-sm-3 col-md-2">
          <img class="img-fluid figure-img d-block mx-auto" src="img/payment/invoice.png" alt="{{ 'Facture' if lang == 'fr' else 'Bill' }}" width="160" height="160" loading="lazy">
          <figcaption class="figure-caption text-center">{{ "Facture (ou QR-facture)" if lang == "fr" else "Bill (or QR-bill)" }}</figcaption>
        </figure>
      {% endif %}
      <figure class="figure col-4 col-sm-3 col-md-2">
        <img class="img-fluid figure-img d-block mx-auto" src="img/payment/paypal.png" alt="PayPal" width="160" height="160" loading="lazy">
        <figcaption class="figure-caption d-none d-md-block text-center">PayPal</figcaption>
      </figure>
      <figure class="figure col-4 col-sm-3 col-md-2">
        <img class="img-fluid figure-img d-block mx-auto" src="img/payment/mastercard2.jpg" alt="Mastercard" width="160" height="160" loading="lazy">
        <figcaption class="figure-caption d-none d-md-block text-center">Mastercard</figcaption>
      </figure>
      <figure class="figure col-4 col-sm-3 col-md-2">
        <img class="img-fluid figure-img d-block mx-auto" src="img/payment/visa2.png" alt="Visa" width="160" height="160" loading="lazy">
        <figcaption class="figure-caption d-none d-md-block text-center">Visa</figcaption>
      </figure>
    </div>
  </div>
</section>
