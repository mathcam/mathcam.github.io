<!-- testimonials -->
<section id="testimonials">
  <div class="container-fluid">
    <h2 class="text-center text-uppercase">{{ "TÃ©moignages" if lang == "fr" else "Testimonials" }}</h2>
    <div class="row justify-content-center">
      {% for t in testimonials %}
      <div class="testimonial-box col-sm-11 col-md-9 col-lg-8 col-xl-7">
        <div class="card">
          <p class="post"> <span><img class="quote-img" src="img/quote.svg" alt="quote" loading="lazy"></span> <span class="post-txt">{{ t.msg }}</span></p>
        </div>
        <div class="arrow-down"></div>
        <div class="row d-flex justify-content-center">
          <div class=""> <img class="profile-pic fit-image" alt="avatar" src="img/avatars/{{ t.avatar }}" width="80" height="80" loading="lazy"> </div>
          <p class="profile-name">
            {{ t.name }}<br />
            {{ t.info }}<br />
            {% if t.source == 'spm' %}
            <span class="text-secondary">source :</span> <a href="{{ SPM }}" target="_blank">Superprof</a>
            {% elif t.source == 'spp' %}
            <span class="text-secondary">source :</span> <a href="{{ SPP }}" target="_blank">Superprof</a>
            {% elif t.source == 'gg' %}
            <span class="text-secondary">source :</span> <a href="{{ GPAGE }}" target="_blank">Google</a>
            {% endif %}
          </p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
